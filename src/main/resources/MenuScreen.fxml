<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.MainMenuController" stylesheets="@styles/styles.css">
   <children>
      <ImageView fx:id="backgroundImage" pickOnBounds="true" preserveRatio="false">
         <image>
            <Image url="@com/example/demo/images/backgroundmenu.png" />
         </image>
      </ImageView>
      <VBox fx:id="buttonContainer" alignment="CENTER" spacing="10">
         <children>
            <ImageView fitHeight="134.0" fitWidth="569.0">
               <image>
                  <Image url="@com/example/demo/images/logo.png" />
               </image>
            </ImageView>
            <Button mnemonicParsing="false"
                    onAction="#startGame"
                    styleClass="menu-button"
                    text="Story Mode"
                    textAlignment="CENTER" />

            <Button mnemonicParsing="false"
                    onAction="#startArcadeMode"
                    styleClass="menu-button"
                    text="Arcade Mode"
                    textAlignment="CENTER" />

            <Button mnemonicParsing="false"
                    onAction="#showLeaderboard"
                    styleClass="menu-button"
                    text="Leaderboard"
                    textAlignment="CENTER" />

            <Button mnemonicParsing="false"
                    onAction="#showSettings"
                    styleClass="menu-button"
                    text="Settings"
                    textAlignment="CENTER" />

            <Button mnemonicParsing="false"
                    onAction="#exitGame"
                    styleClass="menu-button, game-button"
                    text="Exit Game"
                    textAlignment="CENTER" />
         </children>
      </VBox>
   </children>
</Pane>
