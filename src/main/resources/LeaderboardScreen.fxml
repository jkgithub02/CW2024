<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.controller.LeaderboardController">
    <children>
        <ImageView fx:id="backgroundImage" pickOnBounds="true" preserveRatio="false">
            <image>
                <Image url="@com/example/demo/images/backgroundmenu.png" />
            </image>
        </ImageView>

        <!-- Add a semi-transparent white background pane -->
        <Pane fx:id="scoreBackground" style="-fx-background-color: rgba(255, 255, 255, 0.7); -fx-background-radius: 10;">
            <VBox fx:id="scoresContainer" alignment="CENTER" spacing="10">
                <children>
                    <Label text="High Scores" textFill="BLACK">
                        <font>
                            <Font size="30.0" name="System Bold"/>
                        </font>
                    </Label>
                    <VBox fx:id="scoresList" alignment="CENTER" spacing="5" />
                    <Button mnemonicParsing="false" onAction="#backToMenu" text="Back to Menu" />
                </children>
            </VBox>
        </Pane>
    </children>
</Pane>