<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="winRoot" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.demo.controller.WinScreenController">

    <Rectangle fx:id="overlay" fill="#000000" height="${controller.screenHeight}" opacity="0.7" width="${controller.screenWidth}" />

    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(0, 0, 0, 0.8); -fx-padding: 20; -fx-background-radius: 10;">
        <padding>
            <Insets bottom="20" left="40" right="40" top="20" />
        </padding>

        <ImageView fx:id="winImage" fitHeight="200" fitWidth="400" preserveRatio="true">
            <Image url="@com/example/demo/images/youwin.png" />
        </ImageView>

        <Text fx:id="winText" style="-fx-fill: gold; -fx-font-size: 40; -fx-font-family: 'Arial'" text="VICTORY!" />

        <Button fx:id="restartButton" onAction="#handleRestart" style="-fx-pref-width: 200; -fx-pref-height: 40" text="Play Again">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>

        <Button fx:id="mainMenuButton" onAction="#handleMainMenu" style="-fx-pref-width: 200; -fx-pref-height: 40" text="Return to Main Menu">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>
    </VBox>

</StackPane>
