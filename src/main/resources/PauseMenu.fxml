<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="pauseRoot" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.demo.controller.PauseMenuController">

    <Rectangle fx:id="overlay" fill="#000000" height="${controller.screenHeight}" opacity="0.9" width="${controller.screenWidth}" />

    <VBox alignment="CENTER" spacing="20" style="-fx-background-color: rgba(0, 0, 0, 0.8); -fx-padding: 20; -fx-background-radius: 10;">
        <padding>
            <Insets bottom="20" left="40" right="40" top="20" />
        </padding>

        <Text fx:id="pauseTitle" style="-fx-fill: white; -fx-font-size: 30; -fx-font-family: 'Arial'" text="PAUSED" textAlignment="CENTER">
         <font>
            <Font name="Arial" size="25.0" />
         </font></Text>

        <Button fx:id="resumeButton" onAction="#handleResume" style="-fx-pref-width: 200; -fx-pref-height: 40" text="Resume" textAlignment="CENTER">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>

        <Button fx:id="restartButton" onAction="#handleRestart" style="-fx-pref-width: 200; -fx-pref-height: 40" text="Restart" textAlignment="CENTER">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>

        <Button fx:id="mainMenuButton" onAction="#handleMainMenu" style="-fx-pref-width: 200; -fx-pref-height: 40" text="Main Menu" textAlignment="CENTER">
         <font>
            <Font name="Arial Black" size="12.0" />
         </font></Button>
    </VBox>

</StackPane>
